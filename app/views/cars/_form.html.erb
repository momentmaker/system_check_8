<%= simple_form_for @car do |f| %>
  <%= f.association :manufacturer %>
  <%= f.input :color, required: true %>
  <%= f.input :year, required: true, hint: "Only 1920 and above" %>
  <%= f.input :mileage, required: true %>
  <%= f.input :description, as: :text, input_html: { rows: 5, cols: 50 } %>
  <%= f.button :submit %>
<% end %>
